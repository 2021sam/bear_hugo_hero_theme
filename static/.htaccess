# static/.htaccess

# Serve the static index
DirectoryIndex index.html

# Enable rewrite engine
RewriteEngine On


# --- Retired URLs (serve 404) ---
RewriteRule ^rv(/|/index\.html)?$ - [R=404,L]
RewriteRule ^truck-services(/|/index\.html)?$ - [R=404,L]
RewriteRule ^insurance-partnership(/|/index\.html)?$ - [R=404,L]
RewriteRule ^wp-content/uploads/2016/06/ICAR-Certificate-8\.pdf$ - [R=404,L]



# -------------------------------------------------------------------
# Force HTTPS
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Force non-www (comment these 2 lines out if you prefer www)
RewriteCond %{HTTP_HOST} ^www\.cabear\.com$ [NC]
RewriteRule ^ https://cabear.com%{REQUEST_URI} [L,R=301]
# -------------------------------------------------------------------

# -------------------------------------------------------------------
# Caching Rules for Performance
# -------------------------------------------------------------------

<IfModule mod_expires.c>
  ExpiresActive On
  # Images
  ExpiresByType image/webp  "access plus 1 year"
  ExpiresByType image/jpeg  "access plus 1 year"
  ExpiresByType image/png   "access plus 1 year"
  ExpiresByType image/gif   "access plus 1 year"
  # Fonts
  ExpiresByType font/woff2  "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  # CSS + JS
  ExpiresByType text/css    "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
</IfModule>

<IfModule mod_headers.c>
  # Cache images aggressively
  <FilesMatch "\.(webp|jpe?g|png|gif)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  # Fonts
  <FilesMatch "\.(woff2)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  # CSS + JS (shorter)
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=2592000"
  </FilesMatch>
</IfModule>

# -------------------------------------------------------------------
# Security Headers (optional but good practice)
# -------------------------------------------------------------------
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set X-XSS-Protection "1; mode=block"
</IfModule>



# --- Favicon & PWA MIME types ---
<IfModule mod_mime.c>
  AddType image/x-icon .ico
  AddType image/svg+xml .svg
  AddType application/manifest+json .webmanifest
</IfModule>

# --- Cache-control for favicons & manifest ---
<IfModule mod_headers.c>
  # Favicons (ok to cache a week; change if you prefer)
  <FilesMatch "\.(ico|svg)$">
    Header set Cache-Control "public, max-age=604800"
  </FilesMatch>

  # PWA manifest + large app icons can be long-lived & immutable
  <FilesMatch "\.(webmanifest|png)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>


<IfModule mod_headers.c>
  <Files "robots.txt">
    Header set Cache-Control "public, max-age=600, must-revalidate"
  </Files>
</IfModule>
